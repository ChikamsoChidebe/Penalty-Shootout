{
  "name": "penalty-shootout-duel",
  "version": "1.0.0",
  "description": "A fully on-chain penalty shootout betting game for Somnia Testnet",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "compile": "hardhat compile",
    "test": "forge test -vvv",
    "test:gas": "forge test --gas-report",
    "test:coverage": "forge coverage",
    "test:hardhat": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:somnia": "npx hardhat run scripts/deploy.js --network somnia",
    "verify:somnia": "hardhat run scripts/verify.ts --network somnia",
    "node": "hardhat node",
    "clean": "hardhat clean && forge clean",
    "format": "forge fmt",
    "install:foundry": "curl -L https://foundry.paradigm.xyz | bash && foundryup",
    "postinstall": "forge install",
    "sync-frontend": "node scripts/sync-frontend.js"
  },
  "keywords": [
    "web3",
    "blockchain",
    "gaming",
    "betting",
    "somnia",
    "ethereum",
    "solidity",
    "nextjs",
    "defi"
  ],
  "author": "Somnia Hackathon Team",
  "license": "MIT",
